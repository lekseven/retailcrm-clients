<table class="table table-hover">
    <thead>
        <tr>
            <th style="width: 10%">Action</th>
            <th style="width: 10%">Entity</th>
            <th style="width: 60%">Change</th>
            <th style="width: 20%">Timestamp</th>
        </tr>
    </thead>
    <tbody>
    {% for entry in history %}
        <tr>
            <td>{{ entry.action }}</td>
            <td>{{ entry.entityType }}</td>
            <td><pre>{{ entry.changeSet|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) }}</pre></td>
            <td>{{ entry.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
