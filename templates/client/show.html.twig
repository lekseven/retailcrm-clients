{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('show') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('show') }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Client Info</h1>

        <a class="btn btn-outline-primary" href="{{ path('client_index') }}" role="button">Back to list</a>
        <a class="btn btn-info" href="{{ path('client_edit', {'id': client.id}) }}" role="button">Edit</a>

        <div class="float-right">
            {{ include('client/_delete_form.html.twig') }}
        </div>

        <ul class="nav nav-tabs mt-3 mb-3" role="tablist" id="tab_panel">
            <li class="nav-item">
                <a class="nav-link active" href="#info" role="tab" id="info-tab" data-toggle="tab">Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#history" role="tab" id="history-tab" data-toggle="tab">History</a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane show active" id="info" role="tabpanel">
                <table class="table table-hover">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ client.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ client.name }}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{ client.phone }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ client.email }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td>{{ client.updatedAt ? client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                {{ include('address/index.html.twig', {'addresses': client.addresses}) }}
            </div>
            <div class="tab-pane" id="history" role="tabpanel">
                {{ include('client/history.html.twig', {'history': history}) }}
            </div>
        </div>
    </div>

{% endblock %}
